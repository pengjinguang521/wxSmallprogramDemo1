
/*中间文字样式*/
.centerContent{
  font-size: 33rpx;
}

.swiper{
  border-bottom: 1px solid green;
  padding: 5px;
}

swiper{
  height:160px;
    background-color: #FFFFE0;
}

.scroll-view {
  height: 100% ;
  background-color: #FFFFE0;
}

.item_image image{
  width: 100%;
  height: 185px;
}
/* 顶部的三个按钮的视图 */
.topMainView{
  width: 100%;
  height: 240rpx;
  background-color: #FFFFE0;
}

.topHomeRoundView{
  width: 160rpx;
  height: 240rpx;
  margin-left: 66rpx;
  display: flex;
  float:left;
  flex-direction: row;
}


/* 每个按钮的样式 */
.topHomeRoundViewImage{
  width: 160rpx;
  height: 160rpx;
  margin-top: 20rpx;
  top: 20rpx;
  display: flex;
  flex-direction: row;
  border-radius: 80rpx;
}
/* 顶部按钮的文字视图 */
.topHomeTitleView{
  position:absolute;
  width: 160rpx;
  height: 40rpx;
  margin-top: 190rpx; 
  font-size: 30rpx; 
  text-align: center;
  color: gray;
  float:none; 

}

/* 列表样式 */

.listItemView{
  background-color: #FFFFE0;
  width: 100%;
  height: 200rpx;
  display: block;
  float: left;
}


/* icon  */
.listItemViewIcon{

  width:160rpx;
  height: 160rpx;
  margin-top: 20rpx;
  margin-left: 20rpx; 
  border-radius: 20rpx;
}
.listItemTitle{
  position: absolute;
  width: 400rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 35rpx;
  color: gray;
}
.listItemGrade{
   position: absolute;
   width: 400rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 65rpx;
  color: black; 
    font-size: 35rpx;
}


.listItemPrice{
  
   position: absolute;
   width: 400rpx;
  height: 50rpx;
  margin-left: 20rpx;
