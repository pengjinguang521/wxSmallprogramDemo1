.imageView{

width: 100%;
height: 200rpx;
border-radius: 20rpx;
}

/* 文字  */
.labelView{

display: block;
width: 100%;
height: 40rpx;
color: darkgray;
font-size: 30rpx;
  text-align: center;
  /*//超出一行文字自动隐藏  */
  overflow:hidden; 
 /*//文字隐藏后添加省略号  */
